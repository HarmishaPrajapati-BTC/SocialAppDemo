<%= render 'users/shared/home'%>
<div class="right_col" role="main" style="min-height: 600px;">
  <div class="clearfix">
    <h1>Notifications</h1>
    <div class="x_panel">
      <div class="x_content">
        <% if check_presence_of_notification.present? %>
          <% check_presence_of_notification.each do |notification| %>
            <% if notification.notice_type == "Shared Post" %>
              <i class="fa fa-user"></i><%=" #{notification_from_user(notification)} has shared post with you" %>
              <%= link_to find_shared_post(notification), class: 'btn btn-info btn-xs' do %>See Post<% end %>
              <%= link_to notification_path(notification), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-link btn-xs', style: 'color: red;' do %>Delete notification<% end %><br>
            <% elsif notification.notice_type == "New Message" %>
              <i class="fa fa-user"></i><%= " New Message from #{notification_from_user(notification)}" %>
              <%= link_to notification_path(notification), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-link btn-xs', style: 'color: red;' do %>Delete notification<% end %><br>
            <% else %>
              <p><i class="fa fa-user"></i><%= link_to " You Have New friend Request from #{notification_from_user(notification)}", find_user(notification), class: 'btn btn-link', style: 'color: blue;' %></p>
              <ul>
                <% if check_friend_request_status(notification) %>
                  <button class="btn btn-success btn-xs", disabled= true>You are now Friends</button>
                  <%= link_to remove_from_friends_path(notification), class: 'btn btn-danger btn-xs' do %>Unfriend<% end %>
                  <%= link_to notification_path(notification), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-link btn-xs', style: 'color: red;' do %>Delete notification<% end %>
                <% else %>
                  <%= link_to accept_friend_request_path(notification), class: 'btn btn-success btn-xs' do %>Accept<% end %>
                  <%= link_to reject_friend_request_path(notification), class: 'btn btn-warning btn-xs' do %>Reject<% end %>
                  <%= link_to notification_path(notification), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-link btn-xs', style: 'color: red;' do %>Delete notification<% end %>
                <% end %>
              </ul>
            <% end %>
          <% end %>
        <% else %>
          <%= render 'users/shared/no_record_found'%>
        <% end %>
      </div>
    </div>
    <%= link_to posts_path, class: 'btn btn-primary btn-sm' do %>
      <i class="fa fa-arrow-left" aria-hidden="true"></i> Back
    <% end %>
  </div>
</div>
