<%= render 'users/shared/home'%>
<div class="right_col" role="main" style="min-height: 600px;">

  <p id="notice"><%= notice %></p>

  <h1>Groups</h1>

  <table class="table" >
    <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= group.name %></td>
          <td><%= link_to group_path(group) do %>
            <i class="fa fa-eye" data-placement="bottom" title='Show'></td>
          <% end %>
          <td><%= link_to edit_group_path(group) do %>
            <i class="fa fa-edit" data-placement="bottom" title='Edit'></td>
          <% end %>
          <td><%= link_to group_path(group), method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fa fa-trash" data-placement="bottom" title='Delete'></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>
