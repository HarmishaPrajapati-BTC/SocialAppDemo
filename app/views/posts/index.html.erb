<%= render 'users/shared/home'%>
<div class="right_col" role="main" style="min-height: 600px;">
  <p id="notice"><%= notice %></p>

  <h1>Posts</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Post type</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.name %></td>
          <td><%= post.post_type %></td>
          <td><%= post.content %></td>
          <td><%= link_to post_path(post) do %>
            <i class="fa fa-eye" data-placement="bottom" title='Show'></td>
          <% end %>
          <td><%= link_to edit_post_path(post) do %>
            <i class="fa fa-edit" data-placement="bottom" title='Edit'></td>
          <% end %>
          <td><%= link_to post_path(post), method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fa fa-trash" data-placement="bottom" title='Delete'></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Post', new_post_path %>
</div>
