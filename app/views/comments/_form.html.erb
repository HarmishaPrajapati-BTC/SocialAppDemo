<%= form_with(model: @comment, local: true, class: 'form-horizontal form-label-left') do |f| %>
<%= f.hidden_field :post_id, value: params[:post_id] %>
<%= f.hidden_field :user_id, value: current_user.id %>
  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12">
      <%= t('comment') %>
    </label>
    <div class="col-md-8 col-sm-8 col-xs-16">
      <%= f.text_field :comment_text, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-3 col-md-offset-2">
      <%= link_to posts_path, class: 'btn btn-primary' do %>
        <i class="fa fa-arrow-left" aria-hidden="true"></i> <%= t('back') %>
      <% end %>
    </div>
    <div class="col-md-3 col-md-offset-1">
      <button type="submit" class="btn btn-success">Submit</button>
    </div>
 </div>
<% end %>
