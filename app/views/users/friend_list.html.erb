<%= render 'users/shared/home'%>
<div class="right_col" role="main" style="min-height: 600px;">
  <div class="clearfix">
    <h1>Friends  <i class="fa fa-smile-o"></i></h1>
    <div class="x_panel">
      <div class="x_content">
        <table class="table" >
          <thead>
            <tr>
              <th>Name</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @friends.each do |friend| %>
              <tr>
                <td><%= link_to friend.first_name, user_path(friend), class: 'btn btn-link', style: 'color: blue;' %></td>
                <td><%= link_to "Message", conversations_path(user_id: friend), remote: true, method: :post, class: 'btn btn-success btn-xs' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @friends %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-9">
        <ul id="conversations-list">
          <% @conversations.each do |conversation| %>
            <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
